<Window x:Class="PlantenApplicatie.Wachtwoord_vergeten"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlantenApplicatie"
        mc:Ignorable="d"
        Title="Wachtwoord vergeten?"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Height="150" Width="550">
    <Grid>
        <Canvas>
            <Label Content="Gebruikersnaam (e-mailadres) :" Canvas.Left="30" Canvas.Top="31"/>
            <TextBox Canvas.Left="210" Canvas.Top="35" Text="{Binding TextInputEmail, UpdateSourceTrigger=PropertyChanged}"  TextWrapping="Wrap" Width="293"/>
            <Button Content="Stuur wachtwoord naar e-mail adres" Command="{Binding Path=ForgotPasswordCommand}" Canvas.Left="163" Canvas.Top="83" RenderTransformOrigin="0.395,0.703" Width="225"/>

        </Canvas>
    </Grid>
</Window>
