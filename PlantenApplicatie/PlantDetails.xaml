<Window x:Class="PlantenApplicatie.PlantDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlantenApplicatie"
        mc:Ignorable="d"
        Title="Plant Details" Height="600" Width="900">
    <Grid>
        <Canvas>
            <Label Content="Details plant :" Canvas.Top="10" Canvas.Left="10" FontSize="24" />
            <Label x:Name="lblPlantnaamGroot" 
                   Content="{Binding SelectedPlant.Fgsv, UpdateSourceTrigger=PropertyChanged}" Canvas.Top="12" Canvas.Left="169" FontSize="22" Width="437" />

            <ComboBox x:Name="cmbEigenschappen" 
                      ItemsSource="{Binding PrefixKeys}" 
                      SelectedItem="{Binding SelectedPrefixKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Canvas.Left="671" Canvas.Top="25" Width="219" Height="20"/>
            <Label 
                Content="{Binding Path=DetailsPrefixes, UpdateSourceTrigger=PropertyChanged}" Canvas.Left="169" Canvas.Top="153"/>
            <Label 
                Content="{Binding Path=Details, UpdateSourceTrigger=PropertyChanged}" Canvas.Left="396" Canvas.Top="153"/>
        </Canvas>
    </Grid>
</Window>
