<Window x:Class="PlantenApplicatie.OpzoekenPlant"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlantenApplicatie"
        mc:Ignorable="d"
        Title="OpzoekenPlant" Height="500" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <GroupBox Header="Kenmerken" Height="150">
                <Canvas Margin="10">
                    <!-- eerste rij -->
                    <Label Canvas.Top="0" Content="Plantnaam :"/>
                    <TextBox Canvas.Top="5" Canvas.Left="80" Text="Typ een plantnaam" />
                    <Label Canvas.Top="0" Canvas.Left="250" Content="Familie(naam) :"/>
                    <ComboBox  Canvas.Top="5" Canvas.Left="350" Width="125" />
                    <!-- tweede rij -->
                    <Label Content="Groep :" Canvas.Top="30" />
                    <ComboBox Width="125" Canvas.Top="35" Canvas.Left="80"  />
                    <Label Content="Geslacht :" Canvas.Top="30" Canvas.Left="250" />
                    <ComboBox Width="125" Canvas.Top="35" Canvas.Left="350"  />
                    <!-- derde rij -->

                    <Label Content="Soort :" Canvas.Top="60" />
                    <ComboBox Width="125" Canvas.Top="65" Canvas.Left="80"  />
                    <Label Content="Variant :" Canvas.Top="60" Canvas.Left="250" />
                    <ComboBox Width="125" Canvas.Top="65" Canvas.Left="350"  />
                </Canvas>
            </GroupBox>
            <GroupBox Header="Resultaten" Height="260">
                <Canvas>
                    <ListView Canvas.Left="10" x:Name="lvPlanten" Height="220" Width="700">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Plantnaam" Width="70" DisplayMemberBinding="{Binding Plantnaam}" />
                            <GridViewColumn Header="Familienaam" Width="70" DisplayMemberBinding="{Binding Familienaam}" />
                            <GridViewColumn Header="Groep" Width="50" DisplayMemberBinding="{Binding Groep}" />
                            <GridViewColumn Header="Familie" Width="50" DisplayMemberBinding="{Binding Familie}" />
                            <GridViewColumn Header="Geslacht" Width="150" DisplayMemberBinding="{Binding Geslacht}" />
                            <GridViewColumn Header="Soort" Width="120" DisplayMemberBinding="{Binding Soort}" />
                            <GridViewColumn Header="Variant" Width="50" DisplayMemberBinding="{Binding Variant}" />
                        </GridView>
                    </ListView.View>
                </ListView>
                </Canvas>
            </GroupBox>
            <GroupBox Header="Details plant">
                <Canvas>
                <Button Canvas.Top="0" x:Name="btnDetailsPlant" Content="Details plant" HorizontalAlignment="Left" Margin="670,368,0,0" VerticalAlignment="Top" Width="76" Click="btnDetailsPlant_Click"/>
                </Canvas>
            </GroupBox>
        </StackPanel>
        

    </Grid>
</Window>
