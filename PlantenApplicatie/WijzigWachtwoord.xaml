<Window x:Class="PlantenApplicatie.WijzigWachtwoord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlantenApplicatie"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Title="Wachtwoord wijzigen" Height="250" Width="550">
    <Grid>
        <Canvas>
            <Label Content="Nieuw wachtwoord :" Canvas.Left="34" Canvas.Top="68"/>
            <TextBox Canvas.Left="214" Canvas.Top="72" Text="{Binding TextInputPassword, UpdateSourceTrigger=PropertyChanged}"  TextWrapping="Wrap" Width="292"/>
            <Button Content="Sluit venster" Command="{Binding Path=CloseCommand}" Canvas.Left="286" Canvas.Top="165" RenderTransformOrigin="0.395,0.703" Width="163"/>
            <Button Content="Wijzigen wachtwoord" Command="{Binding Path=EditCommand}" Canvas.Left="110" Canvas.Top="165" RenderTransformOrigin="0.395,0.703" Width="158"/>
            <Label Content="Wachtwoord bevestigen:" Canvas.Left="34" Canvas.Top="99"/>
            <TextBox Canvas.Left="214" Canvas.Top="103" Text="{Binding TextInputPasswordConfirm, UpdateSourceTrigger=PropertyChanged}"  TextWrapping="Wrap" Width="292"/>

        </Canvas>
    </Grid>
</Window>
